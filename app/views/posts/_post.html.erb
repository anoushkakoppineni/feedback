<div class="post_div">
  <div class="post_title">
    <%= link_to post.title.capitalize, post_path(id: post.id) %>
  </div>
  <div class="post_content">
    <%= post.content %>
    <% if signed_in? && (current_user.usertype || current_user?(User.find(post.user_id)))%>
    <% if post.file_link %>
      <% # send_file "/public/uploads/#{post.file_link}", type: 'image/jpeg', disposition: 'inline' %>
    <% end %>
      <br>
    <%= link_to "Delete Post", post, method: :delete, class:"btn btn-xs btn-default btn-danger", data: { confirm: "Are you sure?"} %>
  <% end %>
  </div>
  <div class="tags_container">Tags:<% @tags = Post.includes(:tags).find(post.id).tags %>
  <% @tags.each do |tag| %>
      <%= link_to tag.name.capitalize, tag, class:"tag_link btn btn-primary btn-xs btn-success" %>
  <% end %>
  </span>
  <br>
  <br>
  <span>
    <span class="glyphicon glyphicon-user"></span> <%= User.find(post.user_id).fullname.capitalize %> | <span class="glyphicon glyphicon-time"></span> <%= post.created_at %>
</span>
  <span class="expand_comment btn btn-default">View Comments</span>
  <br><br>
  <div class="comment_container">
    <ul>
      <% @comments = Comment.where("post_id = ?", post.id) %>
      <% @comments.each do |comment| %>
        <%= render comment %>
    <% end %>
    </ul>

    <% if signed_in? %>
      <%= form_for(:comment, url: comments_path, method: 'post' , :html => { :class => "form-horizontal"}) do |f|  %>
      <%= f.text_area :content, size: "60x3", class:"form-control", placeholder:"Add a comment" %>
    <%= hidden_field_tag(:post_id, "#{post.id}")%>
    <%= f.submit "Comment", class:"btn btn-primary" %>
  <% end %>

  <% end %>
  </div>
</div>
