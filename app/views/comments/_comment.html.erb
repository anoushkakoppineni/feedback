<div class="comment_div">
  <li><%= comment.content %></li>
  This comment is posted by "<%= User.find(comment.user_id).fullname.capitalize %>" during <%= comment.created_at %>
<br>
  <% if signed_in? && (current_user.usertype || current_user?(User.find(comment.user_id))) %>
    <%= link_to "delete", comment, method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %>
<% end %>
</div>
<br>
