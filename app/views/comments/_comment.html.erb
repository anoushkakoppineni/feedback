<div class="comment_div">
  <li><%= comment.content %></li>
   <span class="glyphicon glyphicon-user"></span> <%= User.find(comment.user_id).fullname.capitalize %> | <span class="glyphicon glyphicon-time"></span> <%= comment.created_at %> | 
  <% if signed_in? && (current_user.usertype || current_user?(User.find(comment.user_id))) %>
    <%= link_to "Delete Comment", comment, method: :delete, class:"btn btn-xs btn-danger", data: { confirm: "Are you sure you want to delete this comment?" } %>
<% end %>
</div>

